{
  "name": "tinytots-daycare-system",
  "version": "1.0.0",
  "description": "Daycare Management and Sales System",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "client:test": "cd client && set PORT=4000 && npm start",
    "dev:two": "concurrently \"npm run server\" \"npm run client\" \"npm run client:test\"",
    "seed:users": "node server/scripts/seed-users.js",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "PWDEBUG=1 playwright test"
  },
  "keywords": [
    "daycare",
    "management",
    "sales",
    "react",
    "nodejs"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "axios": "^1.12.2"
  }
}
