# Production Environment Variables for TinyTots
# Copy these to your Render environment variables

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/tinytots?retryWrites=true&w=majority

# JWT Secret (CHANGE THIS!)
JWT_SECRET=your_super_secure_jwt_secret_here_make_it_long_and_random_at_least_32_characters

# Email Configuration (SendGrid)
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USER=apikey
EMAIL_PASS=your_sendgrid_api_key_here
EMAIL_FROM=TinyTots <noreply@yourdomain.com>

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_SMS_FROM=+1234567890

# Frontend URL (update after Vercel deployment)
FRONTEND_URL=https://your-frontend.vercel.app

# Production Settings
NODE_ENV=production
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MIN=15

# Google OAuth (if using)
GOOGLE_CLIENT_ID=your_google_client_id

# Razorpay (if using)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
