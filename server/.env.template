# TinyTots Environment Configuration Template
# Copy this file to .env and update with your actual credentials

# Node Environment
NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/tinytots

# JWT Secret (generate a secure random string for production)
JWT_SECRET=your_jwt_secret_here_change_this_in_production

# Email Configuration (Development - using Ethereal)
# For production, configure with SendGrid, AWS SES, or another SMTP service
EMAIL_USE_ETHEREAL=true
EMAIL_FROM=TinyTots <noreply@tinytots.local>

# SMS Configuration (Development - using console logger)
# For production, configure with Twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_SMS_FROM=+1234567890

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MIN=15
RATE_LIMIT_ENABLED=false

# Google Auth (Optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Razorpay (Optional)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
